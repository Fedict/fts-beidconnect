         <RegistryValue Root='HKCU' Key='Software\BOSA\BeIDConnect'
                     Name="BeIDConnect.exe" Value="1" Type="integer" KeyPath='yes' />
         <RemoveFile Id="beidconnectexe" Name="*.*" On="both" />
         <RemoveFolder Id='INSTALLFOLDER' On='uninstall' />
         <RemoveFolder Id='RemoveRootDirectory' Directory='ROOTDIRECTORY' On='uninstall' />        
      </Component>
      <Component Id="beidconnect.dll" Guid="{D0DAB0A8-B7ED-4109-A098-F7CC6C9F0AD8}">
         <File Id="beidconnect.dll" Name="beidconnect.dll" Source="..\ActiveX\BeIDConnectX\Release\beidconnect.dll" />
         <RegistryValue Root='HKCU' Key='Software\BOSA\beidconnect' Name='beidconnect.dll' Value="1" Type="integer" KeyPath="yes" />
         <RemoveFile Id="beidconnectdll" Name="*.*" On="both" />

