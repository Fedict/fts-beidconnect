              <ProgId Id="be.bosa.beidconnect" Description="BeIDConnectX.Link" />
          </Class>
         <File Id="beidconnectA.dll" KeyPath="yes" Source="..\ActiveX\BeIDConnectX\Release\beidconnectA.dll" />
