         <!-- to remove chrome.json and firefox.json files that are generated by beidconnect.exe after installation of eidLink -->
         <RemoveFile Id="beidconnectfiles" Name="*.*" On="both" />
         <RemoveFolder Id='INSTALLFOLDER' On='uninstall' />
         <RemoveFolder Id='RemoveRootDirectory' Directory='ROOTDIRECTORY' On='uninstall' />        
      </Component>

